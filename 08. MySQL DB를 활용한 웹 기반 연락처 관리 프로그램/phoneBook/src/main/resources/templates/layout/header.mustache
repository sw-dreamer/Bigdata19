<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ïó∞ÎùΩÏ≤ò</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }

        .navbar {
            background-color: #1f2a44;
            padding: 12px 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .navbar-brand {
            font-size: 1.3rem;
            font-weight: bold;
            color: #ffdd57;
        }
        .navbar-nav .nav-link {
            color: white;
            font-size: 1.1rem;
            padding: 12px 15px;
            transition: 0.3s;
        }
        .navbar-nav .nav-link:hover {
            background-color: #495057;
            border-radius: 5px;
            color: #ffdd57;
        }

        .search-box {
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: 20px;
            padding: 5px 10px;
            border: 2px solid #ffdd57;
        }
        .search-box input {
            border: none;
            outline: none;
            font-size: 1rem;
            padding: 5px;
            width: 200px;
        }
        .search-box button {
            background-color: #ffdd57;
            border: none;
            padding: 5px 12px;
            border-radius: 15px;
            cursor: pointer;
            font-weight: bold;
        }
        .search-box button:hover {
            background-color: #ffcc00;
        }

        .btn-logout {
            background-color: transparent;
            border: 2px solid #ffdd57;
            border-radius: 20px;
            color: #ffdd57;
            padding: 8px 15px;
            transition: 0.3s;
        }
        .btn-logout:hover {
            background-color: #ffdd57;
            color: #1f2a44;
        }

        .time-display {
            color: white;
            font-size: 1.1rem;
            font-weight: bold;
            min-width: 100px;
        }

        .alert {
            font-size: 1.2rem;
            border-radius: 10px;
            animation: fadeOut 5s forwards;
        }

        @keyframes fadeOut {
            0% { opacity: 1; }
            80% { opacity: 1; }
            100% { opacity: 0; display: none; }
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"><strong>{{memberId}}</strong>ÎãòÏùò Ïó∞ÎùΩÏ≤ò</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/contact/{{memberId}}/list">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact/{{memberId}}/add">Ïó∞ÎùΩÏ≤ò Ï∂îÍ∞Ä</a>
                </li>
            </ul>

            <div class="search-box me-3">
                <input type="search" id="searchInput" placeholder="ÏÇ¨Ïö©Ïûê Í≤ÄÏÉâ">
                <button>üîç</button>
            </div>

            <div id="searchResults" class="search-results mt-3"></div>

            <div class="d-flex align-items-center">
                <div class="time-display me-3" id="time">--:--:--</div>
                <button class="btn btn-logout" id="logoutBtn">Î°úÍ∑∏ÏïÑÏõÉ</button>
            </div>


        </div>
    </div>
</nav>

{{#msg}}
    <div class="alert alert-primary alert-dismissible fade show text-center mt-3 mx-3">
        {{msg}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/msg}}

<script>
    function updateTime() {
    const options = {
        timeZone: 'Asia/Seoul',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: false
    };
    const timeString = new Date().toLocaleTimeString('en-GB', options);
    console.log(timeString);
    document.getElementById('time').textContent = timeString;
}

setInterval(updateTime, 1000);
updateTime();


    document.getElementById("logoutBtn").addEventListener("click", function () {
        fetch("/member/logout", { method: "POST" })
        .then(() => window.location.href = "/member/login")
        .catch(err => console.error("Logout failed:", err));
    });

      document.querySelector(".search-box button").addEventListener("click", function () {
        const searchTerm = document.getElementById("searchInput").value.trim();
        if (searchTerm) {
            const memberId = "{{memberId}}"; // ÌÖúÌîåÎ¶øÏóêÏÑú memberIdÎ•º ÎèôÏ†ÅÏúºÎ°ú Í∞ÄÏ†∏Ïò¥
            window.location.href = `/contact/${memberId}/search?query=${encodeURIComponent(searchTerm)}`;
        }
});




</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
